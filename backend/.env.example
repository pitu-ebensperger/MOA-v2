#Server
PORT=4000
# Valores permitidos: development | production | test
NODE_ENV=development

ADMIN_PASSWORD=admin123
DUAL_PASSWORD=dual123


#Database PSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=moa
DB_POOL_MAX=20                 # Ajusta en prod según carga (p.ej. 40-60)
DB_POOL_IDLE_TIMEOUT_MS=30000  # 30s por defecto; eleva en prod si usas transacciones largas
DB_POOL_CONNECTION_TIMEOUT_MS=2000 # 2s por defecto; incrementa si la red es lenta
#DB_SSL=true                   # Descomentar si la base exige SSL
#DB_SSL_REJECT_UNAUTHORIZED=false # Útil cuando el proveedor entrega certificados auto-firmados

#JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_ADMIN_EXPIRES_IN=1d #tiempo extra para admin


# Email SMTP (gmail: smtp.gmail.com / outlook: smtp-mail.outlook.com)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@moa.cl
FRONTEND_URL=https://moa-tienda.vercel.app

# Password Reset Cleanup (intervalo mínimo 5 minutos; valores booleanos en texto)
PASSWORD_RESET_CLEANUP_ENABLED=true
PASSWORD_RESET_CLEANUP_INTERVAL_MINUTES=60
PASSWORD_RESET_CLEANUP_LOGS=false

#CORS
CORS_ORIGINS=https://moa-tienda.vercel.app


